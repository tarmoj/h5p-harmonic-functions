  {

    "name": "exercises",
    "type": "list",
    "label": "Harmonic function exercises",
    "description": "Define harmonic function exercises (max 100)",
    "entity": "Exercise",
    "min": 1,
    "max": 100,

    "field": {
      "name": "harmonicFunctionsField",
      "type": "group",
      "label": "Exercise data",
      "fields": [
        {
          "name": "title",
          "type": "text",
          "label": "(Sub)title of the exercise",
          "description": "(Sub)title of the exercise shown in dropdown menu"
        },
        {
          "name": "functions",
          "type": "list",
          "label": "Functions by measures",
          "description": "Enter functions ( T, S, D or M) by measures. One bar may have several functions like TD. Upper/lower case does not matter.",
          "entity": "Measure",
          "min": 2,
          "max": 32,
          "field": {
            "label": "Function(s)",
            "name": "functionCell",
            "type": "text"
          }
        },
        {
          "name": "audioFile",
          "type": "audio",
          "label": "Audio file"
        },
        {
          "name": "notationImage",
          "type": "image",
          "label": "Notation",
          "optional": true,
          "description": "Notation (png or jpg)"
        }
      ]
    }

  },

  {
    "name": "l10n",
    "type": "group",
    "label": "UI labels",
    "importance": "low",
    "common": true,
    "fields": [
      {
        "name": "explanation",
        "type": "text",
        "default": "Enter the harmonic functions of the musical excerpt -  T, S, D or M (tonic, subdominant, dominant or mediant)"
